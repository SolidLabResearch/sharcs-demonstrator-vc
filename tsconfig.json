{
  "compilerOptions": {
    "declaration": true,
    "target": "ES6",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "noEmitOnError": false,
    "esModuleInterop": true,
    "resolveJsonModule":true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "paths": {
      "jsonld-signatures": [
        "./types/jsonld-signatures"
      ],
      "jsonld": [
        "./types/jsonld"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
